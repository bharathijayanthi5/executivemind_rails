<%= form_for @post do |f| %>
   <% if @post.errors.any? %>
      <h4><%= pluralize(@post.errors.count, "error") %> found </h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
      </ul>
   <% end %>
   <p>
    <%= f.label :image %></br>
    <%= f.file_field :image %>
   </p>
  <p>
   <%= f.label :title %></br>
   <%= f.text_field :title %>
  </p>
  <p>
   <%= f.label :body %></br>
   <%= f.text_area :body %>
  </p>
   <%= f.submit %>
<% end %>
